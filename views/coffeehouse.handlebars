
<div class="container">
  <div class="row">
    <h4>Name: {{{name}}}</h4>
    <h6>Bio: {{bio}}</h6>
    <h4>Address: {{address}}</h4>
  </div>

</div>

<div class="container">
    {{#if user}}
  <div>
    <h3>
      Add a Review
    </h3>
    <form id="add-review">
      <div class="form-group">
        <textarea class="form-control" id="review" rows="3"></textarea>
      </div>
      <button class="btn btn-primary">Add Review</button>
    </form>
  </div>
    {{/if}}
    {{#unless user}}
        <button>register/signup</button>
    {{/unless}}

  <div class="reviews">
    {{#each Reviews}}
    <h2>{{comment}}</h2>
    <h3>{{rating}}</h3>
    {{/each}}
  </div>
</div>

<script>
  $("#add-review").on("submit", function (e) {
    e.preventDefault();
    var review = {
      comment: $("#review").val().trim(),
      rating: 3,
      CoffeeHouseId: {{id}}
    };

    $.ajax({
      method: "POST",
      url: "/api/review",
      data: review
    }).then(function (res) {
      location.reload();
    }).catch(function (err) {
      // something went wrong.
      // handle it
      console.log(err);
    })
  })
</script>
